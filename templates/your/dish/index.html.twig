{% extends 'base.html.twig' %}

{% block title %}Блюда{% endblock %}

{% block body %}
    <h1>Список блюд</h1>

    <a href="{{ path('app_dish_new') }}" class="btn btn-success">Добавить блюдо</a>

    <div class="card">
        <table>
            <thead>
                <tr>
                    <th>Фото</th>
                    <th>Название</th>
                    <th>Цена</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
            {% for dish in dishes %}
                <tr>
                    <td>
                        {% if dish.hasImage %}
                            <img src="{{ vich_uploader_asset(dish, 'imageFile') }}" alt="{{ dish.name }}" style="max-width: 50px;">
                        {% else %}
                            <img src="{{ asset('images/placeholder.jpg') }}" alt="Заглушка" style="max-width: 50px;">
                        {% endif %}
                    </td>
                    <td>{{ dish.name }}</td>
                    <td>{{ dish.price }} руб.</td>
                    <td>
                        <a href="{{ path('app_dish_show', {'id': dish.id}) }}" class="btn btn-primary">Просмотр</a>
                        <a href="{{ path('app_dish_edit', {'id': dish.id}) }}" class="btn btn-secondary">Редактировать</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Блюда не найдены</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}