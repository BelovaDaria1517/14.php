{% extends 'base.html.twig' %}

{% block title %}Блюдо: {{ dish.name }}{% endblock %}

{% block body %}
    <h1>Блюдо: {{ dish.name }}</h1>

    <div class="card">
        <div class="form-group">
            <label>Фото:</label>
            {% if dish.hasImage %}
                <img src="{{ vich_uploader_asset(dish, 'imageFile') }}" alt="{{ dish.name }}" style="max-width: 300px;">
            {% else %}
                <img src="{{ asset('images/placeholder.jpg') }}" alt="Заглушка" style="max-width: 300px;">
                <p>Фото не загружено</p>
            {% endif %}
        </div>

        <div class="form-group">
            <label>Название:</label>
            <p>{{ dish.name }}</p>
        </div>

        <div class="form-group">
            <label>Цена:</label>
            <p>{{ dish.price }} руб.</p>
        </div>
    </div>

    <a href="{{ path('app_dish_edit', {'id': dish.id}) }}" class="btn btn-secondary">Редактировать</a>
    <a href="{{ path('app_dish_index') }}" class="btn btn-primary">Назад к списку</a>
{% endblock %}