{% extends 'base.html.twig' %}

{% block title %}Заказы{% endblock %}

{% block body %}
    <h1>Список заказов</h1>

    <a href="{{ path('app_order_new') }}" class="btn btn-success">Создать заказ</a>

    <div class="card">
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Клиент</th>
                    <th>Кол-во блюд</th>
                    <th>Сумма</th>
                    <th>Файлы</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
            {% for order in orders %}
                <tr>
                    <td>#{{ order.id }}</td>
                    <td>{{ order.client.FIO }}</td>
                    <td>{{ order.dishes|length }}</td>
                    <td>{{ order.totalPrice }} руб.</td>
                    <td>{{ order.files|length }} файл(ов)</td>
                    <td>
                        <a href="{{ path('app_order_show', {'id': order.id}) }}" class="btn btn-primary">Просмотр</a>
                        <a href="{{ path('app_order_edit', {'id': order.id}) }}" class="btn btn-secondary">Редактировать</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">Заказы не найдены</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}