{% extends 'base.html.twig' %}

{% block title %}Регистрация{% endblock %}

{% block page_title %}Регистрация нового клиента{% endblock %}

{% block content %}
    <h2>Создание аккаунта</h2>

    {{ form_start(registrationForm) }}
        <div>
            {{ form_label(registrationForm.fio) }}
            {{ form_widget(registrationForm.fio) }}
        </div>

        <div>
            {{ form_label(registrationForm.phone) }}
            {{ form_widget(registrationForm.phone) }}
        </div>

        <div>
            {{ form_label(registrationForm.plainPassword.first) }}
            {{ form_widget(registrationForm.plainPassword.first) }}
        </div>

        <div>
            {{ form_label(registrationForm.plainPassword.second) }}
            {{ form_widget(registrationForm.plainPassword.second) }}
        </div>

        <div>
            <button type="submit">Зарегистрироваться</button>
        </div>
    {{ form_end(registrationForm) }}

    <hr>
    <p>Уже есть аккаунт? <a href="{{ path('app_login') }}">Войти в систему</a></p>
{% endblock %}