<!DOCTYPE html>
<html>
<head>
    <title>{% block title %}Ресторан{% endblock %}</title>
    <meta charset="UTF-8">
</head>
<body>
    <h1>{% block page_title %}Ресторан - Система управления{% endblock %}</h1>
    
    <nav>
        <a href="{{ path('app_dish_index') }}">Главная</a> 
        <a href="{{ path('app_client_index') }}">Клиенты</a> 
        <a href="{{ path('app_dish_index') }}">Меню</a> 
        <a href="{{ path('app_order_index') }}">Заказы</a>
    </nav>

    <hr>

    {% for message in app.flashes('success') %}
        <div>{{ message }}</div>
    {% endfor %}

    {% for message in app.flashes('warning') %}
        <div>{{ message }}</div>
    {% endfor %}

    {% block content %}{% endblock %}

    <hr>
    <footer>
        <p>&copy; {{ "now"|date("Y") }} Ресторан</p>
    </footer>
</body>
</html>