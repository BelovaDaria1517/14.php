<!DOCTYPE html>
<html>
<head>
    <title>{% block title %}Ресторан{% endblock %}</title>
    <meta charset="UTF-8">
</head>
<body>
    <h1>{% block page_title %}Ресторан - Система управления{% endblock %}</h1>
    
    <nav>
        {% if is_granted('ROLE_CLIENT') %}
            <span>Добро пожаловать, {{ app.user.fio }}!</span>
            <a href="{{ path('app_client_orders') }}">Мои заказы</a>
            <a href="{{ path('app_client_order_new') }}">Новый заказ</a>
            <a href="{{ path('app_logout') }}">Выйти</a>
        {% else %}
            <a href="{{ path('app_dish_index') }}">Меню</a>
            <a href="{{ path('app_login') }}">Войти</a>
            <a href="{{ path('app_register') }}">Регистрация</a>
        {% endif %}
    </nav>

    <hr>

    {% for message in app.flashes('success') %}
        <div>{{ message }}</div>
    {% endfor %}

    {% for message in app.flashes('warning') %}
        <div>{{ message }}</div>
    {% endfor %}

    {% block content %}{% endblock %}

    <hr>
    <footer>
        <p>&copy; {{ "now"|date("Y") }} Ресторан</p>
    </footer>
</body>
</html>